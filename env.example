# Environment Configuration Example
# Copy this file to .env and modify as needed

# Environment Mode
# Set to 'production' to use hosted API, 'development' for local API
EXPO_PUBLIC_ENVIRONMENT=production

# Production API Configuration (Hosted)
EXPO_PUBLIC_API_BASE_URL=https://api.bestinfra.app/v2gmr/api
EXPO_PUBLIC_TICKETS_BASE_URL=https://api.bestinfra.app/v2gmr/api
EXPO_PUBLIC_AUTH_BASE_URL=https://api.bestinfra.app/v2gmr/api/sub-app/auth
EXPO_PUBLIC_RESET_PASSWORD_URL=https://api.bestinfra.app/v2gmr/api/auth
EXPO_PUBLIC_HEALTH_URL=https://api.bestinfra.app/v2gmr/api/health
EXPO_PUBLIC_PAYMENT_URL=https://api.bestinfra.app/v2gmr/api/payment

# Development API Configuration (Local - for testing)
EXPO_PUBLIC_DEV_API_BASE_URL=http://192.168.1.83/api
EXPO_PUBLIC_DEV_TICKETS_BASE_URL=http://192.168.1.83:4255/api
EXPO_PUBLIC_DEV_AUTH_BASE_URL=http://192.168.1.83/api/sub-app/auth
EXPO_PUBLIC_DEV_RESET_PASSWORD_URL=http://192.168.1.83:3000/api/v1/auth
EXPO_PUBLIC_DEV_HEALTH_URL=http://192.168.1.83/api/health
EXPO_PUBLIC_DEV_PAYMENT_URL=http://192.168.1.83/api/payment

# Debug Settings
EXPO_PUBLIC_DEBUG_API_CALLS=false
EXPO_PUBLIC_LOG_LEVEL=error
